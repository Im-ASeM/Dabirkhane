<div class="container-xxl flex-grow-1 container-p-y">
    <!-- User Sidebar -->
    <!-- User Card -->
    <!-- Activity Timeline -->
    <div class="card mb-4">

        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="col-xxl">
                @if (ViewBag.NewError != null)
                {
                    <div class="alert alert-solid-danger alert-dismissible d-flex align-items-center" role="alert">
                        @ViewBag.NewError
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">ایمیل جدید</h5>
                        <small class="text-muted float-end primary-font">ایمیل جدید</small>
                    </div>
                    <div class="card-body">
                        <form action="/Message/NewMsg" id="form" enctype="multipart/form-data" onsubmit="test"
                            method="post">

                            <div class="row md-3">
                                <label for="ReciverId" class="col-sm-2 col-form-label">لیست گیرنده ها</label>
                                <div class="col-sm-10">
                                    <select id="ReciverId" class="select2 form-select" name="ReciversId" multiple>
                                        @foreach (var item in ViewBag.Contacts)
                                        {
                                            @if (ViewBag.ReciversId != null && ViewBag.ReciversId.Contains(item.Item2))
                                            {
                                                <option data-avatar="@item.Item1" value="@item.Item2" selected>@item.Item3
                                                    (@item.Item4)
                                                </option>
                                            }
                                            else
                                            {
                                                <option data-avatar="@item.Item1" value="@item.Item2">@item.Item3 (@item.Item4)
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <br>
                            <div class="row md-3">
                                <label for="CCId" class="col-sm-2 col-form-label">لیست رونوشت ها</label>
                                <div class="col-sm-10">
                                    <select id="CCId" class="select2 form-select" name="CCsId" multiple>
                                        @foreach (var item in ViewBag.Contacts)
                                        {
                                            @if (ViewBag.ReciversId != null && ViewBag.ReciversId.Contains(item.Item2))
                                            {
                                                <option data-avatar="@item.Item1" value="@item.Item2" selected>@item.Item3
                                                    (@item.Item4)
                                                </option>
                                            }
                                            else
                                            {
                                                <option data-avatar="@item.Item1" value="@item.Item2">@item.Item3 (@item.Item4)
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <br>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" for="basic-default-company">موضوع</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="basic-default-company"
                                        placeholder="موضوع (subject) ایمیل را وارد کنید" name="Subject"
                                        value="@ViewBag.Subject">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" for="basic-default-message">پیام</label>
                                <input type="hidden" id="hiddenBodyText" name="BodyText">
                                <div class="col-sm-10">
                                    <div class="col-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <div id="full-editor">
                                                    @Html.Raw(ViewBag.BodyText)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label" for="upload">فایل های پیوست شده</label>
                                <div class="col-sm-10">
                                    <input type="file" id="upload" class="account-file-input" multiple name="Files">
                                </div>
                            </div>
                            <div class="row justify-content-end">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">ارسال</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>