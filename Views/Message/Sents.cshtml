<div class="container-xxl flex-grow-1 container-p-y">
    <!-- User Sidebar -->
    <!-- User Card -->
    <!-- Activity Timeline -->
    <div class="card mb-4">
        <!-- Bootstrap Table with Header - Dark -->
        <div class="card container-fluid">
            <h5 class="card-header heading-color">پیام های ارسال شده</h5>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead class="table-dark">
                        <tr>
                            <th>شماره</th>
                            <th>موضوع</th>
                            <th>شماره نامه</th>
                            <th>متن ایمیل</th>
                            <th>نام فرستنده</th>
                            <th>دریافت کنندگان</th>
                            <th>رونوشت ها</th>
                            <th>تاریخ ایجاد</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @{
                            var i = 1 + ((ViewBag.DataPage-1) * 10);
                        }
                        @foreach (var item in ViewBag.Messages)

                        {
                            <tr>
                                <td>
                                    @i
                                    @{
                                        i++;
                                    }
                                </td>
                                <td>
                                    <strong>
                                        @item.Subject.Substring(0, Math.Min(10, item.Subject.Length))
                                    </strong>
                                </td>
                                <td>@item.SerialNumber</td>
                                <td>@PubDo.texter(item.BodyText).Substring(0,
                                             Math.Min(20, PubDo.texter(item.BodyText).Length))
                                    @if (Math.Min(20, PubDo.texter(item.BodyText).Length) == 20)
                                    {
                                        <span>...</span>
                                    }
                                </td>
                                <td>
                                    <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                        <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"
                                            class="avatar avatar-xs pull-up"
                                            title="@item.SenderUser.FirstName @item.SenderUser.LastName">
                                            <img src="@item.SenderUser.Profile" alt="آواتار" class="rounded-circle">
                                            @item.SenderUser.FirstName @item.SenderUser.LastName
                                        </li>
                                    </ul>
                                </td>
                                <td>

                                    <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                        @foreach (var recive in item.recivers)

                                        {
                                            @if (recive.Type == "to")

                                            {
                                                <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"
                                                    class="avatar avatar-xs pull-up"
                                                    title="@recive.Reciver.FirstName @recive.Reciver.LastName">
                                                    <img src="@recive.Reciver.Profile" alt="آواتار" class="rounded-circle">
                                                </li>
                                            }
                                        }
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                            data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-horizontal-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu table-responsive">
                                            <ul>

                                                @foreach (var recive in item.recivers)

                                                {
                                                    @if (recive.Type == "to")

                                                    {
                                                        <li>@recive.Reciver.FirstName @recive.Reciver.LastName</li>
                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </ul>
                                </td>
                                <td>
                                    <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                        @foreach (var recive in item.recivers)

                                        {
                                            @if (recive.Type == "cc")

                                            {
                                                <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top"
                                                    class="avatar avatar-xs pull-up"
                                                    title="@recive.Reciver.FirstName @recive.Reciver.LastName">
                                                    <img src="@recive.Reciver.Profile" alt="آواتار" class="rounded-circle">
                                                </li>
                                            }
                                        }
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                            data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-horizontal-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu table-responsive">
                                            <ul>

                                                @foreach (var recive in item.recivers)

                                                {
                                                    @if (recive.Type == "cc")

                                                    {
                                                        <li>@recive.Reciver.FirstName @recive.Reciver.LastName</li>
                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </ul>
                                </td>
                                <td>@PubDo.persianDate(item.CreateDateTime).Item1
                                    @PubDo.persianDate(item.CreateDateTime).Item2</td>
                                <td>
                                    <a class="btn btn-xs" href="/Message/ReturnEmail/@item.Id"><i
                                            class="bx bx-message-alt-edit me-1"></i>
                                    </a>
                                    <a class="btn btn-xs" href="/Message/Trash/@item.Id?page=sents"><i
                                            class="bx bx-trash me-1"></i>
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @if (ViewBag.DataPage - 2 > 0)

                        {
                            <li class="page-item first">
                                <a class="page-link" href="/Message/sents/1"><i class="tf-icon bx bx-chevrons-left"></i></a>
                            </li>
                        }
                        @if (ViewBag.DataPage - 1 != 0)

                        {
                            <li class="page-item prev">
                                <a class="page-link" href="/Message/sents/@(ViewBag.DataPage-1)"><i
                                        class="tf-icon bx bx-chevron-left"></i></a>
                            </li>
                        }
                        @if (ViewBag.DataPage - 2 > 0)
                        {
                            <li class="page-item">
                                <a class="page-link" href="/Message/sents/@(ViewBag.DataPage-2)">@(ViewBag.DataPage - 2)</a>
                            </li>
                        }
                        @if (ViewBag.DataPage - 1 > 0)
                        {
                            <li class="page-item">
                                <a class="page-link" href="/Message/sents/@(ViewBag.DataPage-1)">@(ViewBag.DataPage -
                                1)</a>
                            </li>
                        }
                        <li class="page-item active">
                            <a class="page-link" href="/Message/sents/@ViewBag.DataPage">@ViewBag.DataPage</a>
                        </li>
                        @if (ViewBag.DataPage + 1 <= ViewBag.DataPageCount)
                        {
                            <li class="page-item">
                                <a class="page-link" href="/Message/sents/@(ViewBag.DataPage+1)">@(ViewBag.DataPage +
                                1)</a>
                            </li>
                        }
                        @if (ViewBag.DataPage + 1 < ViewBag.DataPageCount)
                        {
                            <li class="page-item">
                                <a class="page-link" href="/Message/sents/@(ViewBag.DataPage+2)">@(ViewBag.DataPage + 2)</a>
                            </li>
                        }
                        @if (ViewBag.DataPage + 1 <= ViewBag.DataPageCount)
                        {
                            <li class="page-item next">
                                <a class="page-link" href="/Message/sents/@(ViewBag.DataPage+1)"><i
                                        class="tf-icon bx bx-chevron-right"></i></a>
                            </li>
                        }
                        @if (ViewBag.DataPage + 1 < ViewBag.DataPageCount)
                        {
                            <li class="page-item last">
                                <a class="page-link" href="/Message/sents/@ViewBag.DataPageCount"><i
                                        class="tf-icon bx bx-chevrons-right"></i></a>
                            </li>
                        }
                    </ul>
                </nav>
                <!--/ Basic Pagination -->
            </div>
        </div>
    </div>
</div>